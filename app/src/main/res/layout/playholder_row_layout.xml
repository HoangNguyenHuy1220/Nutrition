<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/layout_padding">

    <View
        android:id="@+id/view_image"
        android:layout_width="@dimen/image_width"
        android:layout_height="0dp"
        android:background="@color/mediumGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view_1"/>

    <View
        android:id="@+id/view_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_title_height"
        android:layout_marginHorizontal="@dimen/text_margin_horizontal"
        android:background="@color/mediumGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_image"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_description"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_title_height"
        android:layout_marginHorizontal="@dimen/text_margin_horizontal"
        android:layout_marginTop="@dimen/description_margin_top"
        android:background="@color/mediumGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_image"
        app:layout_constraintTop_toBottomOf="@id/view_title" />

    <View
        android:id="@+id/view_1"
        android:layout_width="@dimen/view_width"
        android:layout_height="@dimen/view_width"
        android:layout_marginTop="@dimen/fab_margin"
        android:background="@color/mediumGray"
        app:layout_constraintEnd_toStartOf="@id/view_2"
        app:layout_constraintStart_toEndOf="@id/view_image"
        app:layout_constraintTop_toBottomOf="@id/view_description" />

    <View
        android:id="@+id/view_2"
        android:layout_width="@dimen/view_width"
        android:layout_height="@dimen/view_width"
        android:layout_marginTop="@dimen/fab_margin"
        android:background="@color/mediumGray"
        app:layout_constraintEnd_toStartOf="@id/view_3"
        app:layout_constraintStart_toEndOf="@id/view_1"
        app:layout_constraintTop_toBottomOf="@id/view_description" />

    <View
        android:id="@+id/view_3"
        android:layout_width="@dimen/view_width"
        android:layout_height="@dimen/view_width"
        android:layout_marginTop="@dimen/fab_margin"
        android:background="@color/mediumGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_2"
        app:layout_constraintTop_toBottomOf="@id/view_description" />

</androidx.constraintlayout.widget.ConstraintLayout>